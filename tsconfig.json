{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
			"/@/*": ["src/*"]
		},
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
		"allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  }
}
